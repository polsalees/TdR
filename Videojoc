import pygame

# Iniciar programa
pygame.init()

# Preparar la pantalla
amplada_pantalla, alçada_pantalla = 800, 600
pantalla = pygame.display.set_mode((amplada_pantalla, alçada_pantalla))
pygame.display.set_caption("Angry Birds")

# Game loop
def GameLoop():
    partida = True
    while partida:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                partida = False
            elif event.type == pygame.KEYDOWN:
                if event.key == pygame.K_q:
                    partida = False

        # Netejar la pantalla
        pantalla.fill((255, 255, 255))

        # Recarregar la pantalla
        pygame.display.flip()

    # Sortir del joc
    pygame.quit()

# Córrer el joc
GameLoop()
