import pygame
import math

# Iniciar programa
pygame.init()

# Definir els colors bàsics
negre = (0, 0, 0)
blanc = (255, 255, 255)
vermell = (255, 0, 0)
verd = (0, 255, 0)
blau = (0, 0, 255)
cian = (0, 255, 255)
rosa = (255, 0, 255)
groc = (255, 255, 0)

# Preparar la pantalla
pantalla_amplada, pantalla_alçada = 800, 600
pantalla = pygame.display.set_mode((pantalla_amplada, pantalla_alçada))
pygame.display.set_caption("Angry Birds")

# Rellotge
rellotge =  pygame.time.Clock()
FPS = 30 

# Eines per escriure
font = pygame.font.Font(None, 50)
text = font.render("Hello world!", True, negre)
pantalla.blit(text, (pantalla_amplada // 2 - text.get_width() // 2, pantalla_alçada // 2 - text.get_height() // 2))

# Creació ocells
def ocells():
    ocell_radi = 20
    ocell_posició = (100, pantalla_alçada - ocell_radi - 100)
    pygame.draw.circle(pantalla, vermell, ocell_posició, ocell_radi)

# Variables linea
superficie_rectangle = pygame.Surface((200,200))
superficie_rectangle.set_colorkey(blanc)
superficie = superficie_rectangle.copy()
superficie.set_colorkey(blanc)
rect = superficie.get_rect()
rect.center = (100, 480)
mantenint = False
# Creació linea que indica direcció ocell
def linea():
    global rect   
    superficie_rectangle.fill(blanc)
    amplada = ((pygame.mouse.get_pos()[0] - 100)**2 + (pygame.mouse.get_pos()[1] - 480)**2)**0.5 
    pygame.draw.rect(superficie_rectangle, blau, pygame.Rect(100-amplada,100,1000,5))
    pygame.draw.rect(superficie_rectangle, blanc, pygame.Rect(100,100,100,5))
    angle = math.degrees(math.atan2(pygame.mouse.get_pos()[0] - 100, pygame.mouse.get_pos()[1] - 480))
    old_center = rect.center
    rectangle_nou = pygame.transform.rotate(superficie_rectangle, angle+87)
    rect = rectangle_nou.get_rect()
    rect.center = old_center
    pantalla.blit(rectangle_nou, rect)

# Creació porcs
def porcs():
    porc_radi = 30
    porc_posició = (pantalla_amplada - porc_radi - 100, pantalla_alçada - porc_radi - 10)
    pygame.draw.circle(pantalla, verd, porc_posició, porc_radi)

# Selecció de nivell
def selecció_dificultat():
    dificultat_seleccionada = None
    while not dificultat_seleccionada:
        for event in pygame.event.get():
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_1:
                    dificultat_seleccionada = "Fàcil"
                elif event.key == pygame.K_2:
                    dificultat_seleccionada = "Intermig"
                elif event.key == pygame.K_3:
                    dificultat_seleccionada = "Difícil"
        
        pantalla.fill(blanc)
        
        font = pygame.font.Font(None, 50)
        text1 = font.render("Seleccioinar dificultat:", True, negre)
        text2 = font.render("1 - Fàcil", True, negre)
        text3 = font.render("2 - Intermig", True, negre)
        text4 = font.render("3 - Difícil", True, negre)

        pantalla.blit(text1, (pantalla_amplada // 2 - text1.get_width() // 2, pantalla_alçada // 2 - text1.get_height() // 2 - 75))
        pantalla.blit(text2, (pantalla_amplada // 2 - text2.get_width() // 2, pantalla_alçada // 2 - text2.get_height() // 2 - 25))
        pantalla.blit(text3, (pantalla_amplada // 2 - text3.get_width() // 2, pantalla_alçada // 2 - text3.get_height() // 2 + 25))
        pantalla.blit(text4, (pantalla_amplada // 2 - text4.get_width() // 2, pantalla_alçada // 2 - text4.get_height() // 2 + 75))

        pygame.display.flip()

    return dificultat_seleccionada

# Menú principal
def menú():
    while True:
        for event in pygame.event.get():
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_ESCAPE:
                    return False
                elif event.key == pygame.K_SPACE:
                    dificultat = selecció_dificultat()
                    if dificultat:
                        print("Dificultat seleccionada:", dificultat)
                        return True

        pantalla.fill(blanc)

        font = pygame.font.Font(None, 50)
        text = font.render("Angry Birds", True, negre)
        pantalla.blit(text, (pantalla_amplada // 2 - text.get_width() // 2, pantalla_alçada // 2 - text.get_height() // 2))

        pygame.display.flip()

# Game loop
def GameLoop():
    mantenint_ocell = False
    partida = False
    while True:
        if not partida:
            if not menú():
                break
            partida = True
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                partida = False
            elif event.type == pygame.KEYDOWN:
                if event.key == pygame.K_ESCAPE:
                    partida = False
            if event.type == pygame.MOUSEBUTTONDOWN and pygame.mouse.get_pos()[1]>460 and pygame.mouse.get_pos()[1]<500 and pygame.mouse.get_pos()[0]>80 and pygame.mouse.get_pos()[0]<120:
                mantenint_ocell = True
            elif event.type == pygame.MOUSEBUTTONUP:
                mantenint_ocell = False
        # Netejar la pantalla
        pantalla.fill(blanc)
        
        # Aparèixer porcs i ocells
        if mantenint_ocell == True:
            print("No")
            linea()
        porcs()
        ocells()

        # Recarregar la pantalla
        pygame.display.flip()

    # Sortir del joc
    pygame.quit()

# Córrer el joc
GameLoop()
